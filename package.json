{
  "name": "requirements-mapper",
  "version": "0.1.0",
  "description": "Auto-require all matching files within a directory recursively and return them as single object, representing the directory's structure.",
  "author": "Simon Lepel <simbo@simbo.de>",
  "license": "MIT",
  },
  "main": "lib/index.js",
  "files": [
    "lib/index.js",
    "README.md"
  ],
  "scripts": {
    "test": "./node_modules/.bin/mocha --reporter spec",
    "jshint": "./node_modules/.bin/jshint ./lib/*.js",
    "jscs": "./node_modules/.bin/jscs ./lib/*.js",
    "cover": "./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha -- -R spec",
    "dev": "./node_modules/.bin/gulp watch"
  },
  "devDependencies": {
    "codeclimate-test-reporter": "^0.1.0",
    "gulp": "^3.9.0",
    "gulp-mocha": "^2.1.3",
    "istanbul": "^0.3.17",
    "jscs": "^2.0.0",
    "jshint": "^2.8.0",
    "mocha": "^2.2.5"
  },
  "dependencies": {
    "glob": "^5.0.14"
  }
}
